<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PetTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#122000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textColor">#819181</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PetCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">2dp</item>
    </style>

    <style name="CategoryCardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">5</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <style name="CategoryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#270000</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">24dp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textColor">#836F6F</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NeedsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#78C5D8</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textColor">#275C80</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NeedsCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

</resources>